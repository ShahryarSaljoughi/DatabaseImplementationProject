<Page x:Class="DesktopApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="30">
            <Label Content="نام کاربری" Margin="30"></Label>
            <TextBox Name="UserName" MinWidth="100" Margin="30"></TextBox>
        </WrapPanel>
        <WrapPanel Grid.Row="1" Margin="30">
            <Label Content="رمز عبور" Margin="30"></Label>
            <TextBox Name="Password" MinWidth="100" Margin="30"></TextBox>
        </WrapPanel>
        <Button Grid.Row="2" Content="ادامه" Click="OnContinueClicked"></Button>
        
    </Grid>
</Page>
